<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fox.androidsecomp" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DetailNoticia"
            android:label="@string/title_activity_detail_noticia"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fox.androidsecomp.MainActivity" />
        </activity>
        <activity
            android:name=".Participantes"
            android:label="@string/title_activity_participantes"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fox.androidsecomp.MainActivity" />
        </activity>
        <activity
            android:name=".DetailParticipantes"
            android:label="@string/title_activity_detail_participantes"
            android:parentActivityName=".Participantes" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fox.androidsecomp.Participantes" />
        </activity>
        <activity
            android:name=".ProgramacaoActivity"
            android:label="@string/title_activity_programacao"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.fox.androidsecomp.MainActivity" />
        </activity>
    </application>

</manifest>
